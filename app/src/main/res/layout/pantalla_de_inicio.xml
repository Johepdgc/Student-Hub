<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/azul">

    <ImageView
            android:layout_width="225dp"
            android:layout_height="225dp" app:srcCompat="@drawable/student_hub_icon" android:id="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.048"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
        android:background="@drawable/text_inputbox"
        android:padding="8dp"
            android:id="@+id/editTextTextEmailAddress"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.424" android:text="e-Mail"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
        android:background="@drawable/text_inputbox"
        android:padding="8dp"
            android:id="@+id/editTextNumberPassword"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.523" android:text="Contraseña"/>
    <TextView
            android:text="Ovidaste la contraseña?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.594"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Ingresar"
            android:layout_width="285dp"
            android:layout_height="55dp" android:id="@+id/button3"
            android:background="@drawable/btn_amarillo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.72"
            app:layout_constraintHorizontal_bias="0.515"/>
    <TextView
            android:text="o inicia sesion con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.803"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Google"
            android:layout_width="140dp"
            android:layout_height="55dp" android:id="@+id/button4"
            android:background="@drawable/left_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.239"
            app:layout_constraintVertical_bias="0.929"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Facebook"
            android:layout_width="140dp"
            android:layout_height="55dp" android:id="@+id/button5"
            android:background="@drawable/right_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.774"
            app:layout_constraintVertical_bias="0.927"/>
</androidx.constraintlayout.widget.ConstraintLayout>